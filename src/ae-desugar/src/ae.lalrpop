use std::str::FromStr;
use crate::ast::{Expr, Opr};

grammar;

pub Expr: Box<Expr> = {
    <n:Num> => Box::new(Expr::Num(n)),
    "-" <e:Expr> => Box::new(Expr::Neg(e)),
    "(" <l:Expr> <op:ExprOp> <r:Expr> ")" => Box::new(Expr::Op(l, op, r)),
    "(" <e:Expr> ")" => e,
};

ExprOp: Opr = {
    "+" => Opr::Add,
    "-" => Opr::Sub,
};

Num: i32 = {
    r"(-)?[0-9]+" => i32::from_str(<>).unwrap(),
}